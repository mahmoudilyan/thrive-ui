{
  "name": "@thrive/design-system-docs",
  "version": "1.0.0",
  "private": true,
  "description": "Thrive Design System - Documentation and Component Library",
  "scripts": {
    "dev": "concurrently \"pnpm dev:docs\" \"pnpm dev:storybook\"",
    "dev:docs": "next dev --turbo --port 3002",
    "dev:storybook": "storybook dev -p 6006",
    "build": "pnpm generate:props && pnpm build:docs && pnpm build:storybook",
    "build:docs": "fumadocs-mdx && next build",
    "build:storybook": "storybook build",
    "start": "next start",
    "start:docs": "next start",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate:props": "tsx scripts/generate-props.ts",
    "generate:content": "fumadocs-mdx",
    "lint": "next lint",
    "clean": "rm -rf .next storybook-static node_modules .source"
  },
